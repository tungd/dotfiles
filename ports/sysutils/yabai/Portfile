PortSystem              1.0
PortGroup               github 1.0

github.setup            koekeishiya yabai v3.3.0

version                 3.3.0
name                    yabai
categories              sysutils
license                 MIT
platforms               macosx
maintainers             {@tungd}

description             Tiling window management for the Mac.

long_description        yabai is a window management utility that is designed to work \
                        as an extension to the built-in window manager of macOS. yabai \
                        allows you to control your windows, spaces and displays freely \
                        using an intuitive command line interface and optionally set \
                        user-defined keyboard shortcuts using skhd and other third-party \
                        software.

homepage                https://github.com/koekeishiya/yabai

checksums               sha256  4c7306f77d35a09bba3b228bbe8778c1673e0d6c30c486e9d7bc34169deefcdf \
                        rmd160  73367ba51d055becbf98c97cf5f8ab95d9a9d1b7 \
                        size    1509115

configure {}

destroot {
  xinstall -m 775 ${worksrcpath}/bin/${name} ${destroot}${prefix}/bin/${name}
}

startupitem.create      yes
startupitem.name        yabai
startupitem.executable  "${prefix}/bin/yabai"
